#include "colors.inc"


background {
    rgb<0,0,0>
}


camera {
    location<0,10,300>
    look_at<0,10,0>
}



#declare glowingSpore = sphere {
    <0,0,0>
    2
    texture {
        pigment {
            color Yellow
        }
        finish {
            specular 1
            roughness 0.5
            ambient 1000
            emission 1000
        }
    }
}

#declare SporeField = union {

    #declare randomNumberStream = seed(1153);
    #declare Index = 0;
    #while (Index < 1)
        object {
            glowingSpore
            translate<rand(randomNumberStream),rand(randomNumberStream),rand(randomNumberStream)>
    }
    #end
}

object {
    SporeField
}

